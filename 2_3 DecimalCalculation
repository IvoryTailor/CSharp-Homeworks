using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace DecimalCalculation
{
    class Program
    {
        static void Main(string[] args)
        {
            decimal var1, var2;
            Console.WriteLine("Write two variables (followed by enter): ");
            var1 = decimal.Parse(Console.ReadLine());
            var2 = decimal.Parse(Console.ReadLine());

            Console.WriteLine();

            Console.WriteLine("The sum of your two variables is: " + (var1 + var2));
            Console.WriteLine("The difference of your two variables is: " + (var1 - var2));
            Console.WriteLine("The product of your two variables is: " + (var1 * var2));
            Console.WriteLine("The ratio of your two variables is: " + (var1 / var2));
        }
    }
}
