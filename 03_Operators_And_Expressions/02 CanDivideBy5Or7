using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace CanDivideBy5Or7
{
    class Program
    {
        static void Main(string[] args)
        {
            bool canDivide = false;
            Console.WriteLine("Enter number to be checked: ");
            int number = int.Parse(Console.ReadLine());
            if ((number % 5 == 0) && (number % 7 == 0))
                canDivide = true;
            if (canDivide)
                Console.WriteLine(number + " can be divided by 5 and 7.");
            else
                Console.WriteLine(number + " cannot be divided by 5 and 7");

        }
    }
}
