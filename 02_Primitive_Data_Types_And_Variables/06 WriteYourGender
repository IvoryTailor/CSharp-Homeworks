using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace WriteYourGender
{
    class Program
    {
        static void Main(string[] args)
        {
            bool isMale = true;
            Console.WriteLine("Enter your gender ('m'for male and 'f' for female): ");
            char gender = char.Parse(Console.ReadLine());
            if (gender == 'm')
                isMale = true;
            else if (gender == 'f')
                isMale = false;
            else
                Console.WriteLine("Wrong input!!!");

            if (isMale)
                Console.WriteLine("So you are a man.");
            else
                Console.WriteLine("So you are a woman.");

        }
    }
}
